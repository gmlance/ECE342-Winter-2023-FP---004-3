/*adapted code from Electronics Hub (https://www.electronicshub.org/digital-arduino-voltmeter/)*/
#include "LiquidCrystal.h"

LiquidCrystal lcd(2, 3, 4, 5, 6, 7);

float voltage = 0.0;
float temp=0.0;
int analog_value;

void setup(){
   lcd.begin(16, 2); 
   lcd.setCursor (0,0);
   lcd.print(" LCD Display ");
   lcd.setCursor(0,1); 
   lcd.print("DC Power Supply");
   delay(2000);
}

void loop() {  
   analog_value = analogRead(A0);
   temp = (analog_value * 5.0) / 1024.0; 
   voltage = temp/(0.0909);
   if (voltage < 2 | voltage > 14 ) {
     voltage=0.0;
   } 
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Channel 1= ");
    lcd.print(voltage);
    lcd.setCursor(13,0);
    lcd.print("V");
    lcd.setCursor(0, 1);
    lcd.print("Channel 2= ");
    lcd.print(voltage);
    lcd.setCursor(13,1);
    lcd.print("V");
    delay(30);
}
