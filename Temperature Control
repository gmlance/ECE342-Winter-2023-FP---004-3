/********************************************************************/
// First we include the libraries
#include <OneWire.h> 
#include <DallasTemperature.h>
/********************************************************************/
// Data wire is plugged into pin 2 on the Arduino 
#define ONE_WIRE_BUS 2 
/********************************************************************/
// Setup a oneWire instance to communicate with any OneWire devices  
// (not just Maxim/Dallas temperature ICs) 
OneWire oneWire(ONE_WIRE_BUS); 
/********************************************************************/
// Pass our oneWire reference to Dallas Temperature. 
DallasTemperature sensors(&oneWire);
/********************************************************************/ 
const int pin9 = 9;
const double EXTRA_HIGH_TEMP = 110;
const double HIGH_TEMP = 105;
const double LOW_TEMP = 80;
const double MID_TEMP = 90;
void setup(void) 
{ 
 // start serial port 
 pinMode(pin9, OUTPUT);
 delay(5000); //let things turn on
 Serial.begin(9600); 

 // Start up the library 
 sensors.begin(); 
} 
void loop(void)
{

// Send the command to get temperatures
  //sensors.requestTemperatures();
  //Serial.print("Temperature is: ");
  //Serial.println(sensors.getTempFByIndex(0)); // You can have more than one IC on the same bus. 0 refers to the first IC on the wire ---> still trying to figure out what this means
  if (sensors.getTempFByIndex(0) > EXTRA_HIGH_TEMP ) {
    digitalWrite(pin9,LOW); // An example for how we could turn off/on the relays using a polling method
    Serial.print("High Temperature - input/output has shut off"); //warnings printed for different temperature ranges
    Serial.println();
} else if (sensors.getTempFByIndex(0) > HIGH_TEMP ) {
    Serial.print("Approaching Unsafe Temperature - input/output will turn off soon");
    Serial.println();

} else if (sensors.getTempFByIndex(0) > MID_TEMP ) {
    digitalWrite(pin9, HIGH);
    Serial.print("Device Temperature Increasing");
    Serial.println();

} else if (sensors.getTempFByIndex(0) < LOW_TEMP ) {
    digitalWrite(pin9, HIGH);
    Serial.print("Safe Temperature");
    Serial.println();
}
//Update value every 1 sec. this can be changed as we see fit
  delay(1000);
}
